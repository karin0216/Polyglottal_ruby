<%= form_with(model: diary) do |form| %>
  <% if diary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(diary.errors.count, "error") %> prohibited this diary from being saved:</h2>

      <ul>
        <% diary.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.text_field :feeling, class:"form-control", placeholder:"How do you feel today?" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.text_field :text, class:"form-control", placeholder:"Enter some text..." %>
  </div>
  <div class="field form-group">
    <%= form.text_field :user_id, id: :diary_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:"btn btn-dark", :style=>"background-color:#D15FEB; border-color:#D15FEB;" %>
  </div>
<% end %>
