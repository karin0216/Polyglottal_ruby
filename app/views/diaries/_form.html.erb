    <%= form.label :feeling %>
    <%= form.text_field :feeling, class:"form-control", placeholder:"How do you feel today?" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.label :text %>
    <%= form.text_field :text, class:"form-control", placeholder:"Enter some text..." %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:"btn btn-dark"%>
  </div>
<% end %>
